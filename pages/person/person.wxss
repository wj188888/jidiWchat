/*
个人中心
  */

Page {
  background: #fff;
}

.headerbanner {
  width: 100%;
}

.headerbanner image {
  width: 100%;
  height: 290rpx;
}

.head {
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  top: 205rpx;
}

.head .pic {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin: 0 auto;
  background: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.headepic {
  width: 100%;
  height: 100%;
}

.personbox {
  width: 100%;
  margin-top: 200rpx;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.personbox .listbox {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.personbox .listbox .fl {
  color: #ff3e34;
  margin-right: 20rpx;
}

.personbox .listbox .fr {
  margin-right: 10rpx;
  float: right;
  font-size: 24rpx;
}

.personbox .listbox .words {
  color: #4d4d4d;
  width: 90%;
}

.footer {
  width: 100%;
  line-height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 28rpx;
  color: #808080;
}

.footer .iconfont {
  font-size: 28rpx;
  color: #ff3e34;
  margin-right: 20rpx;
}
