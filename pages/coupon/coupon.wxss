/*pages/cunpon/coupon  */

.coupon {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.tabs {
  width: 100%;
  height: 60rpx;
  border-radius: 5px;
  border: 1px solid #ff3126;
  line-height: 60rpx;
  text-align: center;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  background: #fff;
}

.tabs .tab {
  width: 50%;
}

.tabs .on {
  background: #ff3126;
  color: #fff;
}

.tabContent {
  width: 100%;
  box-sizing: border-box;
}

.tabContent .ableList {
  position: relative;
  width: 100%;
  background-size: 100% 100%;
  background-repeat: none;
  margin-top: 20rpx;
  display: flex;
  height: 185rpx;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.tabContent .left {
  width: 32%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tabContent .left .num {
  font-size: 46rpx;
}

.tabContent .left .txt1 {
  color: #e8e34f;
}

.tabContent  .right {
  width: 68%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  color: #b3b3b3;
  line-height: 50rpx;
  font-size: 24rpx;
}
.tabContent .right .name {
  color: #ff3126;
  font-size: 30rpx;
}
.tabContent .right .usedname {
  color: #666666;
  font-size: 30rpx;
}

.tabContent .ableList .gou{
  position: absolute;
  right: 5rpx;
  bottom: 2rpx;
  width: 40rpx;
  height: 40rpx;
}

.tabContent .usedList {
  position: relative;
  width: 100%;
  background-size: 100% 100%;
  background-repeat: none;
  margin-top: 20rpx;
  display: flex;
  height: 185rpx;
  flex-wrap: nowrap;
  justify-content: flex-start;
}
.tabContent .usedList .usedimg{
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  width: 117rpx;
  height: 117rpx;
}