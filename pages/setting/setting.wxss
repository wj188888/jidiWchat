/* pages/setting/setting.wxss */

.container {
  width: 100%;
}

.infobox {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.infobox .header, .infobox .replace {
  height: 100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.header image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.infobox .replace {
  font-size: 24rpx;
  color: #4f8ff9;
  font-weight: normal;
}

/*信息列表  */

.infolists {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.infolists .infoLi {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  color: #666;
  font-size: 24rpx;
}

.infolists .infoLi .info {
  color: #333;
}

.infolists .infoLi .info .nextIcon {
  width: 12rpx;
  height: 21rpx;
  margin-left: 10rpx;
}
