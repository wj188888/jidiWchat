/* pages/newPerson/newPerson.wxss */

.container {
  width: 100%;
  background-color: #fff;
}

.head {
  position: relative;
  width: 100%;
  height: 260rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #fff;
}

.head .header {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.memberRankBox {
  font-size: 24rpx;
  color: #fff;
  padding: 4rpx 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  border-radius: 40rpx;
  margin-top: 10rpx;
}

.memberRankBox image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.goSet {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 内容区 */

.content {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
  padding-bottom: 80rpx;
}

/* 我的积分优惠券 */

.menuBox {
  position: relative;
  top: -30rpx;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: 0px 0px 40rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 20rpx 0;
}

.menuBox .menuList {
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  border-left: 1px solid #e5e5e5;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
}

.menuBox .menuList .nextIcon {
  width: 12rpx;
  height: 21rpx;
  margin-left: 20rpx;
}

.menuBox .menuList .upBox, .menuBox .menuList .downBox {
  width: 50%;
  text-align: left;
}

.menuBox .menuList .downBox {
  color: #ff3126;
}

.menuBox .menuList .downBox .numTxt {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.border_l_0 {
  border-left: none !important;
}

/*订单列表  */

.orderMenu {
  width: 100%;
  background-color: #fff;
  box-shadow: 0px 0px 40rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.orderMenu .lookAllOrderBox {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1px solid #e5e5e5;
}

.orderMenu .lookAllOrderBox .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.orderMenu .orderTypeBox {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
}

.orderMenu .orderTypeBox .typeList {
  width: 20%;
  height: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  line-height: 50rpx;
}

.orderMenu .orderTypeBox .typeList image {
  width: 50rpx;
  height: 50rpx;
}

/*客服电话  */

.tel {
  font-size: 24rpx;
  color: #666;
}

/*前往维修工程师订单  */

.goengineer {
  width: 100%;
  height: 90rpx;
  background-color: #ff3126;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  outline: none;
  line-height: 90rpx;
  font-size: 32rpx;
  margin: 40rpx 0 0;
}
