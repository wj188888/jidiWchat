/*pages/engineerorder/engineerorder.wxss  */

.tabs {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}

.tabs .tab {
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
}

.tabs .tab text {
  display: block;
  width: 100%;
  border-left: 1px solid #e5e5e5;
}

.tabs .on {
  width: 20%;
  border-bottom: 2px solid #ff3126;
}

/*订单列表  */

.tabContent {
  width: 100%;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}

.orderLists {
  width: 100%;
}

.orderLists .orderLi {
  width: 100%;
  background-color: #fff;
  margin-bottom: 25rpx;
}

.orderCode {
  width: 100%;
  height: 75rpx;
  border-bottom: 1px dashed #e5e5e5;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  position: relative;
  font-size: 24rpx;
  color: #666;
}

.orderCode .orderState {
  background-color: #fff5f5;
  border-radius: 5px;
  color: #ff3126;
  padding: 3rpx 15rpx;
}

.orderCode .leftCir, .orderCode .rightCir {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  bottom: -15rpx;
  border-radius: 50%;
  background-color: #eeedf2;
}

.orderCode .leftCir {
  left: -15rpx;
}

.orderCode .rightCir {
  right: -15rpx;
}

.orderInfo {
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
  position: relative;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #666;
}

.orderInfo .personInfo {
  color: #333;
  font-weight: bold;
}

.orderInfo .addressInfo {
  width: 90%;
  color: #333;
}

.txtml10 {
  margin-left: 20rpx;
}

.arrow {
  position: absolute;
  right: 30rpx;
  top: 45rpx;
  width: 15rpx;
  height: 25rpx;
}

/*支付金额  */
.orderMoney{
  width: 100%;
  height: 75rpx;  
  border-top: 1px dashed #e5e5e5;
  line-height: 75rpx;
  padding: 0 25rpx;
  font-size: 24rpx;
  color: #333;
  box-sizing: border-box;
}
.payMoney{
  color: #ff3126;
}

.noData{
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  color: #888;
}
