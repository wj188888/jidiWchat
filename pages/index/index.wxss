/**index.wxss**/

swiper {
  height: 250rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.select-title, .newest-title {
  width: 100%;
  padding: 30rpx 0;
  height: 40rpx;
  color: #ab956d;
  text-align: center;
}

.select-top-small {
  width: 375rpx;
  height: 375rpx;
  float: left;
}

.select-bottom, .select-top {
  width: 100%;
  height: 375rpx;
}

.select-top-small image, .select-bottom image, .select-top-small navigator,
.select-bottom navigator {
  display: block;
  width: 100%;
  height: 100%;
}

.device-box {
  width: 100%;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 10rpx 0;
  width: 100%;
  float: left;
}

.device-box .sbtitle {
  font-size: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
  width: 100%;
  display: inline-block;
  padding-bottom: 20rpx;
  color: #4d4d4d;
}

.device-box .device-model {
  width: 100%;
  padding-top: 20rpx;
  float: left;
}

.mobileinfo {
  float: left;
}

.device-box .device-model .mobilepic {
  width: 60rpx;
  height: 100rpx;
  display: inline-block;
  margin-right: 20rpx;
  float: left;
}

.device-box .device-model text {
  display: block;
  margin-top: 7rpx;
}

.device-box .change-model {
  float: right;
  width: 230rpx;
  height: 70rpx;
  border: 1px solid #ff3e34;
  border-radius: 5px;
  line-height: 70rpx;
  text-align: center;
  margin-top: 12rpx;
  background-image: url(../image/arr.png) right 20rpx;
}

.arr {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.headbox {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: fixed;
  right: 20rpx;
  top: 0;
  background: #b651d4;
}

.mobile-question {
  background: #fff;
  width: 100%;
  float: left;
  padding: 20rpx;
  box-sizing: border-box;
}

.commontitle {
  height: 40rpx;
  width: 100%;
  display: block;
  line-height: 40rpx;
  border-left: 12rpx solid #ff3e34;
  padding-left: 20rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.chooseFailureList {
  width: 100%;
  float: left;
  box-sizing: border-box;
}

.chooseFailureList text {
  display: block;
}

.chooseFailureList view {
  width: 21%;
  text-align: center;
  float: left;
  margin: 0 3%;
  height: 150rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.chooseFailureList .active {
  color: #ff3126;
  border: 1px solid #ff3126;
  box-sizing: border-box;
  background: url(https://xcx.yunbaite.com/static/img/xcx_gou.png) no-repeat right bottom;
}

.icon-img {
  width: 74rpx;
  height: 74rpx;
}

.chooseFailureList .box .text {
  display: block;
  margin: 29rpx 0;
}

.gz-box {
  padding: 5% 34rpx 0 5%;
  box-sizing: border-box;
}

.gz-box .active {
  border-color: red;
}

.gz-box view {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.gz-box view .fr {
  float: right;
}

.detailFailure_content view.active {
  border: 1rpx solid #ff3126;
}

.ques-pop .btn-group {
  margin-top: 30rpx;
}

.btn-group {
  padding: 0 40rpx;
  box-sizing: border-box;
}

.index-footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  box-sizing: border-box;
}

.index-footer .left {
  width: 68%;
  float: left;
  font-size: 30rpx;
}

.index-footer .left .total {
  color: #ff3e34;
  font-size: 34rpx;
}

.index-footer .left .bz {
  color: #999;
  font-size: 24rpx;
}

.index-footer .right {
  width: 32%;
  background: #ff3e34;
  color: #fff;
  font-size: 32rpx;
  float: right;
}

.characteristic-selected {
  background: #fffbf1;
  border-color: #ffe9b7;
  color: #ffe6b4;
}

.queschoose {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.queschoose.choosedbtn {
  border: 1px solid #ff3126;
  color: #ff3126;
}

.detailFailure_content view {
  line-height: 80rpx;
  font-size: 28rpx;
  border: 1rpx solid #e4e4e4;
  border-radius: 8rpx;
  width: 100%;
  margin: 20rpx auto;
  padding: 0 30rpx;
}

.detailFailureCon {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.detailFailureCon .btn-group {
  margin-bottom: 30rpx;
}

.detailFailure {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 90%;
  border-radius: 8rpx;
  -webkit-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
}

.detailFailure_title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  padding: 40rpx 0 20rpx;
}

.detailFailure_content {
  min-height: 200rpx;
  max-height: 600rpx;
  overflow: auto;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.detailFailure_content view {
  line-height: 80rpx;
  font-size: 28rpx;
  border: 1px solid #e4e4e4;
  border-radius: 8rpx;
  width: 90%;
  margin: 20rpx auto;
  padding: 0 30rpx;
}

.detailFailure_content view.active {
  border: 1px solid #ff3126;
  background: url(https://xcx.yunbaite.com/static/img/xcx_gou.png) no-repeat right bottom;
  background-size: 15px auto;
}

.detailFailure_content view.active text {
  color: #ff3126;
}

.detailFailure_content_r {
  float: right;
}

.detailFailure_content_tip {
  width: 90%;
  font-size: 24rpx;
  color: #999;
  margin: 20rpx auto;
}

.detailFailure_btn text {
  float: left;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: 36rpx;
  border-top: 1rpx solid #e4e4e4;
  color: #333;
}

.detailFailure_btn_l {
  color: #999 !important;
  border-right: 1rpx solid #e4e4e4;
}

.headpic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  position: fixed;
  right: 20rpx;
  top: 20rpx;
  background: #b651d4;
}

.headpic .img {
  width: 100%;
  height: 100%;
}
