/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.textareaBox {
  width: 100%;
  margin-top: 500rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.textareaBox .textbox {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.textareaBox input{
  margin-top: 40rpx;
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  height: 100rpx;
}