/* pages/attendant/attendant.wxss */

/*管理维修订单  */

.banner {
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

/*维修人员信息  */

.engineerInfo {
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-direction: column;
}

.engineerInfo .infoUp {
  width: 80%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.headImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.engineerInfo .infoUp .info {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  flex-direction: column;
  text-align: left;
  margin-left: 40rpx;
}

.engineerInfo .infoDown .centerTxt {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

/*更换手机号  */

.changePhone {
  position: fixed;
  top: 50rpx;
  right: 0;
  width: 140rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  font-size: 24rpx;
  line-height: 60rpx;
  border-radius: 30rpx 0 0 30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.changePhone .icon-zuoji {
  margin-right: 20rpx;
}

.changePhoneMask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
}

.changePhoneDialog {
  width: 70%;
  height: 48%;
  background-color: #fff;
  border-radius: 20rpx;
  position: fixed;
  z-index: 9999;
  top: 21%;
  left: 15%;
  overflow: hidden;
  font-size: 24rpx;
  box-sizing: border-box;
}

.changePhoneDialog .currentBg {
  width: 100%;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.changePhoneDialog .currentBox {
  width: 100%;
  height: 200rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: flex-start;
  line-height: 50rpx;
  padding: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.curPhone {
  font-size: 32rpx;
}

.closeDialog {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 64rpx;
  color: #fff;
}

/*修改业务手机号  */

.changePhoneDialog .changeBox {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.telIpt, .submitBtn {
  width: 100%;
  height: 90rpx;
  border-radius: 5px;
  box-sizing: border-box;
}

.telIpt {
  background-color: #f5f5f5;
  padding: 0 10rpx;
  margin: 20rpx 0;
}

.submitBtn {
  background-color: #ff3126;
  color: #fff;
  font-size: 32rpx;
  border: none;
  margin-top: 20rpx;
}

/*订单状态列表  */

.stateList {
  width: 95%;
  height: 150rpx;
  margin: 0 auto;
  background-color: #fff;
  margin-top: -20rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.stateList .stateLi {
  width: 33%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.stateList .stateLi .orderNum {
  font-size: 36rpx;
  color: #ff3126;
}

.stateList .stateLiborder {
  border-left: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
}

/*待确认订单  */

.orderStateList {
  width: 100%;
  background-color: #fff;
}

.orderStateList .orderStateLi {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.remark {
  font-size: 20rpx;
  color: #ff3126;
  margin-left: 20rpx;
}

.arrow {
  margin-left: 20rpx;
}

.f_c_ff3126 {
  color: #ff3126;
}

.errorTxt{
  font-size: 24rpx;
  color: #ff3126;
}