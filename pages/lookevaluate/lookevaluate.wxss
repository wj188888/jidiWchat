/* pages/lookevaluate/lookevaluate.wxss */

.container {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.contentBox {
  width: 100%;
  background-color: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.evaluateBox {
  width: 100%;
  height: 300rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  border-bottom: 1px solid #e5e5e5;
}

.evaluateTitle {
  font-weight: bold;
}

.starBox {
  width: 50%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  margin: 0 auto;
  margin-top: 50rpx;
  margin-bottom: 25rpx;
}

.starBox image {
  width: 40rpx;
  height: 40rpx;
}

.causeList {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 40rpx 0;
  box-sizing: border-box;
}

.causeList .causeLi {
  padding: 10rpx 40rpx;
  background-color: #fff3f3;
  color: #fc8899;
  font-size: 28rpx;
  border: 1px solid #fc8899;
  border-radius: 10rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

/*用户留言  */

.messageBox {
  width: 100%;
  border-top: 1px solid #e5e5e5;
  position: relative;
  padding: 40rpx 0;
  line-height: 50rpx;
  font-size: 28rpx;
}

.messageBox .messageTitle {
  position: absolute;
  left: 35%;
  top: -20rpx;
  width: 200rpx;
  text-align: center;
  background-color: #fff;
  font-weight: bold;
}

.messageBox .messageContent {
  min-height: 70rpx;
}

.goIndex {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  border: 1px solid #fc8899;
  color: #ff3126;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}
