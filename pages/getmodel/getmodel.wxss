/*pages/getmodel/getmodel  */

.searchBox {
  width: 100%;
  margin-top: 10rpx;
}

.searchBar {
  border: none;
}

.searchBarform {
  border-radius: 50rpx;
  border: none;
}

.pad-l-20 {
  padding-left: 20rpx;
}

.modelbox {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  background: #fff;
  margin-top: 10rpx;
}

.tabs {
  width: 25%;
  background: #f0f0f0;
  text-align: center;
  color: #999;
}

.tab {
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tabs .active {
  border-left: 12rpx solid #ff3e34;
  background: #fff;
}

.tabContent {
  width: 75%;
}

.txtbox {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.f-c-999 {
  color: #f0f0f0;
}

.modelBox {
  width: 100%;
  overflow: hidden;
}

.modelLists {
  width: 32.5%;
  height: 180rpx;
  float: left;
  text-align: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.modelImg {
  width: 70rpx;
  height: 75rpx;
  margin: 0 auto;
}

.modelImg image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 25rpx 0 10rpx 0;
}

.noMobileBox {
  width: 100%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  color: #999;
}
