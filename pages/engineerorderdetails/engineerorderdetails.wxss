/* pages/engineerorderdetails/engineerorderdetails.wxss */

.stateBox {
  width: 100%;
  height: 120rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

/*维修步骤  */

.repairSteps {
  width: 100%;
  background-color: #fff;
  padding: 0 25rpx 0 50rpx;
  box-sizing: border-box;
}

.stepBox {
  width: 100%;
  box-sizing: border-box;
  border-left: 1px solid #eeedf2;
  padding-bottom: 50rpx;
}

.step {
  position: relative;
  width: 100%;
  min-height: 80rpx;
  line-height: 40rpx;
  padding: 20rpx 0 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border-left: 1px solid #ff3126;
}

.stepImg {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  top: 30%;
  left: -12rpx;
}

/*客户取消  */

.cancelBox {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 25rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #666;
}

.resTxt {
  color: #333;
  font-weight: bold;
}

/*客户信息  */

.contentBox {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
}

.infoList {
  width: 100%;
  min-height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #eeedf2;
  font-size: 28rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  color: #666;
}

.infoList .title {
  width: 120rpx;
}

.infoList  .info {
  max-width: 70%;
  text-align: right;
  color: #333;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

.mar_l_10 {
  margin-left: 20rpx !important;
}

.mar_10 {
  margin: 0 20rpx !important;
}

.text_left {
  text-align: left !important;
}

.titleBox {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  border-bottom: 1px solid #eeedf2;
}

/*故障列表  */

.faultList {
  color: #333;
  width: 100%;
  min-height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1px solid #eeedf2;
  font-size: 28rpx;
  line-height: 50rpx;
  box-sizing: border-box;
}

.damageName, .stockName {
  max-width: 70%;
}

/*取消订单故障列表  */

.cancelList {
  width: 100%;
  border-bottom: 1px solid #eeedf2;
  padding-bottom: 20rpx;
}

.cancelList .cancelUp {
  width: 100%;
  min-height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
}

.cancelList .cancelDown {
  width: 100%;
  color: #666;
  padding: 0 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #eeedf2;
  position: relative;
}

.cancelList .cancelDown .arrow_top {
  position: absolute;
  width: 0;
  height: 0;
  top: -16rpx;
  left: 30rpx;
  border-left: 16rpx solid transparent;
  border-bottom: 18rpx solid #eeedf2;
  border-right: 16rpx solid transparent;
}

.cancelList .cancelDown .fault_li {
  width: 100%;
  min-height: 70rpx;
  color: #666;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  box-sizing: border-box;
}

/*维修中故障列表  */

.repairFault {
  width: 100%;
}

.repairfaultList {
  width: 100%;
  border-bottom: 1px solid #eeedf2;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.repairfaultLi {
  width: 100%;
  min-height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.faultName {
  max-width: 60%;
}

.faultMoney {
  display: flex;
  align-items: center;
}

.partsList {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  background-color: #eeedf2;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

/*主容器*/

.stepper {
  width: 160rpx;
  height: 50rpx;
  border: 1px solid #ccc;
  border-radius: 3px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  background-color: #fff;
}

/*加号和减号*/

.stepper text {
  width: 38rpx;
  line-height: 50rpx;
  text-align: center;
}

/*数值*/

.stepper input {
  width: 80rpx;
  height: 50rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.stepper .normal {
  color: black;
}

.stepper .disabled {
  color: #ccc;
}

/*删除故障  */

.delBtn {
  font-size: 54rpx;
  color: #ff3126;
  margin-left: 40rpx;
  margin-right: 20rpx;
}

/*添加故障按钮  */

.addbox {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
}

.addbox .addBtn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #ff3126;
  background-color: #fff;
  color: #ff3126;
  font-size: 28rpx;
  outline: none;
  padding: 0;
}

/*订单金额  */

.orderPrice {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #999;
}

.totalPrice, .actualPrice {
  border: none;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  color: #666;
}

.actualPrice {
  font-weight: bold;
}

.actualPrice .actualtitle {
  color: #333;
}

.actualPrice .price {
  font-size: 30rpx;
  color: #ff3126;
}

.orderPrice .remarktxt {
  font-size: 24rpx;
  color: #999;
}

/*按钮  */

.btnBox {
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 25rpx;
}

.btnBox button {
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  line-height: 90rpx;
  border: none;
}

.okBtn {
  background-color: #ff3126;
  color: #fff;
}

.repairbtn {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.repairbtn .cancelBtn {
  width: 37%;
  background-color: #ccc;
  color: #666;
  margin: 0;
}

.repairbtn .nextBtn {
  width: 60%;
  background-color: #ff3126;
  color: #fff;
  margin: 0;
}

/*选择故障弹窗  */

.addDamageMask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
}

.addDamageDislog {
  position: fixed;
  left: 50%;
  top: 45%;
  width: 80%;
  border-radius: 10rpx;
  -webkit-transform: translateX(-50%) translateY(-45%);
  transform: translateX(-50%) translateY(-45%);
  background-color: #fff;
  z-index: 9999;
}

.closeDialog {
  position: absolute;
  top: 0;
  right: 20rpx;
  font-size: 56rpx;
}

.damageDislogTitle {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}

.allDamage {
  color: #ff3126;
}

.arrowRight {
  font-size: 28rpx;
  color: #666;
  font-weight: normal;
  margin: 0 10rpx;
}

.damagetype {
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.damageContent {
  width: 100%;
  min-height: 200rpx;
  max-height: 500rpx;
  overflow: auto;
  padding: 20rpx;
  box-sizing: border-box;
}

.damagetypeLi {
  width: 100%;
  min-height: 70rpx;
  line-height: 60rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.demageDetailsLi {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.damageNameLeft {
  display: block;
  width: 75%;
  min-height: 70rpx;
}

.damageprice {
  display: block;
  width: 20%;
  color: #ff3126;
}

/*取消订单弹窗  */

.canceldialog {
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}

.cancelTitle {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
}

.closeCanceldialog {
  position: absolute;
  top: 0;
  right: 20rpx;
  font-size: 56rpx;
}

.cancelRadioGroup .radioLi {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #e5e5e5;
}

.cancelOrderTextbox textarea {
  width: 100%;
  height: 300rpx;
  border: 1px solid #e5e5e5;
  border-radius: 5px;
  padding: 10rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.adaptpopbtn{
  padding: 0;
}
.okbtn{
  width: 100%;
  height: 90rpx;
  background-color: #ff3126;
  color: #fff;
  line-height: 90rpx;
  margin: 0;
  margin-top: 20rpx;
}